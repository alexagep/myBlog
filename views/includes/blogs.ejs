<% if (blogs.length > 0) { %>
    <h2 class="mt-2">Last Posts</h2>
    <hr>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% for (let blog of blogs) { %>
                <tr>
                    <td>1</td>
                    <td><a href="/blogs/<%= blog._id %>"></a><%= blog.title %></td>
                    <td><%= formatDate(blog.createdAt) %></td>
                    <td>
                        <% if(blog.status === "public") { %> 
                            <h6><span class="badge bg-success">public</span></h6>
                        <% } else { %>
                            <h6><span class="badge bg-warning text-dark">private</span></h6>
                            <% } %> 

                    </td>
                    <td>
                        <a href="/dashboard/editPost/<%= blog._id %>" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                    <td>
                        <a href="/dashboard/deletePost/<%= blog._id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <%- include('./pagination.ejs') %>

    </div>
    <% } else { %>
    <div class="text-center">
        <h3 class="mt-2">
            No Posts Found!
        </h3>
    </div>
    <% } %>